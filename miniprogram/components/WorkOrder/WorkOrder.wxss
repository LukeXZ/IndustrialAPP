@import '../../style/text.wxss';

.work-order {
  padding: 20rpx;
  padding-left: 40rpx;
  margin-bottom: 30rpx;
  width: 650rpx;
  min-height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-radius: 30rpx;
  box-shadow: -2px -2px 4px #eee, 2px 2px 4px rgba(0,0,0,0.2);
  position: relative;
  overflow: hidden;
}

.work-order-image {
  height: 50rpx;
  width: 50rpx;
  padding: 10rpx;
  border-radius: 35rpx;
  background-color: #3298DB;
}

.work-order-info {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.color-strip {
  position: absolute;
  left: 0;
  width: 40rpx;
  height: 100%;
}