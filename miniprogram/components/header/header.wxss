.header {
  padding-bottom: 30rpx;
  height: 120rpx;
  width: 750rpx;
  /*background-image: linear-gradient(to right, #57B8FF,#2176AE);*/
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.safe-area {
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4));
  width: 750rpx;
  height: 44px;
  position: fixed;
  top: 0;
  z-index: 5;
}

.title {
  padding: 10rpx 20rpx 10rpx 20rpx;
  width: calc( 750rpx - 40rpx );
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.title-text {
  margin-right: 20rpx;
  color: white;
  max-width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden; 
  word-break: break-all;
}

.title-back-image {
  height: 80rpx;
  width: 80rpx;
  margin-right: 10rpx;
}

.bg-image {
  z-index: -1;
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.H1{
  font-size: xx-large;
  font-weight: bold;
}

.H2{
  font-size: x-large;
  font-weight: bold;
}

.H3{
  font-size: larger;
  font-weight: bold;
}